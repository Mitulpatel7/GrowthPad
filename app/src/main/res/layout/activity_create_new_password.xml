<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context=".Create_new_password">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hey , Welcome Back!"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginTop="@dimen/_40sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Password"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginTop="@dimen/_3sdp"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_marginBottom="@dimen/_10sdp">

    <androidx.cardview.widget.CardView

        android:id="@+id/card_view"
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_360sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/_10sdp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="@dimen/_5sdp">

        <ImageView
            android:layout_width="@dimen/_224sdp"
            android:layout_height="@dimen/_150sdp"
            android:id="@+id/create_new_password_illutation"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/ic_create_password" />

        <EditText
            android:id="@+id/enter_new_password"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_175sdp"
            android:background="@drawable/custom_edittext"
            android:fontFamily="@font/montserrat_medium"
            android:hint="Enter New Password"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/_15sdp"
            android:password="true"
            android:textColor="#363e4b"
            android:textSize="@dimen/_10sdp" />

        <EditText
            android:id="@+id/confirm_password_edittext"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_230sdp"
            android:background="@drawable/custom_edittext"
            android:fontFamily="@font/montserrat_medium"
            android:hint="Confirm New Password"
            android:inputType="textPassword"
            android:password="true"
            android:paddingLeft="@dimen/_15sdp"
            android:textColor="#363e4b"
            android:textSize="@dimen/_10sdp" />

        <Button
            android:id="@+id/create_new_password_submit_btn"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_290sdp"
            android:background="@drawable/custom_btn"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_25sdp" />




    </androidx.cardview.widget.CardView>


    </FrameLayout>



</LinearLayout>