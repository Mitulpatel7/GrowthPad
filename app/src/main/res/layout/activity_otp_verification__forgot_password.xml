<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context=".OTP_verification_Forgot_password">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_70sdp"
        android:fontFamily="@font/montserrat_bold"
        android:text="OTP Verification"
        android:textColor="#363e4b"
        android:textSize="@dimen/_25sdp" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <android.support.v7.widget.CardView

            android:id="@+id/card_view"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_360sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="@dimen/_5sdp">

            <ImageView
                android:id="@+id/otp_verification_forgot_password_illutation"
                android:layout_width="@dimen/_224sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/ic_otp_verification" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_175sdp"
                android:fontFamily="@font/montserrat_medium"
                android:text="   OTP is sent to\n +91 87358 31848"
                android:textColor="#363e4b"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/forgot_password_edit_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_205sdp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Edit"
                android:textColor="#77c360" />

            <EditText
                android:id="@+id/otp_1_forgot_password"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_37sdp"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_225sdp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:textColor="#363e4b"
                android:textSize="@dimen/_10sdp" />


            <EditText
                android:id="@+id/otp_2_forgot_password"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_37sdp"
                android:layout_marginStart="@dimen/_90sdp"
                android:layout_marginTop="@dimen/_225sdp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:textColor="#363e4b"
                android:textSize="@dimen/_10sdp" />

            <EditText
                android:id="@+id/otp_3_forgot_password"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_37sdp"
                android:layout_marginStart="@dimen/_130sdp"
                android:layout_marginTop="@dimen/_225sdp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:textColor="#363e4b"
                android:textSize="@dimen/_10sdp" />

            <EditText
                android:id="@+id/otp_4_forgot_password"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_37sdp"
                android:layout_marginStart="@dimen/_170sdp"
                android:layout_marginTop="@dimen/_225sdp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:textColor="#363e4b"
                android:textSize="@dimen/_10sdp" />


            <TextView
                android:id="@+id/resend_otp_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_270sdp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Resend OTP"
                android:textColor="#363e4b" />

            <Button
                android:id="@+id/otp_verification_forgot_password_submit_btn"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_295sdp"
                android:background="@drawable/custom_btn"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_25sdp" />


        </android.support.v7.widget.CardView>

    </FrameLayout>


</LinearLayout>