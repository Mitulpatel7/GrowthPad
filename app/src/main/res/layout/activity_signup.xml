<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SignupActivity">

    <ImageView
        android:id="@+id/signup_main_upr_logo"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_110sdp"
        android:layout_marginBottom="-70dp"
        android:src="@drawable/ic_growthpad" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="@dimen/_5sdp">

        <android.support.v7.widget.CardView

            android:id="@+id/card_view"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_360sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_5sdp"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="@dimen/_5sdp">


            <ImageView
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-73dp"
                android:src="@drawable/ic_growthpad" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_60sdp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Create Account"
                android:textColor="#363e4b"
                android:textSize="@dimen/_28sdp" />

            <EditText
                android:id="@+id/signup_full_name"
                android:layout_width="@dimen/_230sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_120sdp"
                android:background="@drawable/custom_edittext"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/_15sdp"
                android:textColorHint="#363e4b"
                android:textSize="@dimen/_11sdp" />

            <EditText
                android:id="@+id/signup_phone_number"
                android:layout_width="@dimen/_230sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_180sdp"
                android:background="@drawable/custom_edittext"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Phone"
                android:inputType="number"
                android:paddingLeft="@dimen/_15sdp"
                android:textColorHint="#363e4b"
                android:textSize="@dimen/_11sdp" />


            <EditText
                android:id="@+id/signup_email"
                android:layout_width="@dimen/_230sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_240sdp"
                android:background="@drawable/custom_edittext"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Email (Optional)"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/_15sdp"
                android:textColorHint="#363e4b"
                android:textSize="@dimen/_11sdp" />


            <EditText
                android:id="@+id/signup_create_password"
                android:layout_width="@dimen/_230sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_300sdp"
                android:background="@drawable/custom_edittext"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Create Password"
                android:inputType="textPassword|numberPassword"
                android:paddingLeft="@dimen/_15sdp"
                android:password="true"
                android:textColorHint="#363e4b"
                android:textSize="@dimen/_11sdp" />


        </android.support.v7.widget.CardView>


    </FrameLayout>

    <Button
        android:id="@+id/signup_create_account_btn"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_9sdp"
        android:background="@drawable/custom_create_account_btn"
        android:fontFamily="@font/montserrat_bold"
        android:text="Create Account"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_25sdp" />


    <!--<Button
        android:id="@+id/submit_btn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-30dp"
        android:background="@drawable/custom_btn"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:textSize="20dp" />-->

</LinearLayout>