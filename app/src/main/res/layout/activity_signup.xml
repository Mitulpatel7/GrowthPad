<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SignupActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:background="@android:color/transparent"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="5dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="470dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-50dp"
                    android:background="@drawable/growthpad" />

                <EditText
                    android:id="@+id/signup_email"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="70dp"
                    android:background="@drawable/custom_edittext"

                    android:drawableLeft="@drawable/user"
                    android:drawablePadding="10dp"
                    android:hint="Email id"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:paddingLeft="15dp"
                    android:textSize="20dp" />


                <EditText
                    android:id="@+id/signup_phone"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/signup_email"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/phone_icon"
                    android:drawablePadding="10dp"
                    android:hint="Phone"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="10dp"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/signup_password"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/signup_phone"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/lock"
                    android:drawablePadding="12dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:padding="10dp"
                    android:textSize="20dp" />


                <View
                    android:id="@+id/signup_line"
                    android:layout_width="115dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/signup_password"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="30dp"
                    android:background="#c1c1c1"></View>

                <TextView
                    android:id="@+id/signup_or"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/signup_password"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/signup_line"
                    android:text="Or"
                    android:textSize="20dp" />


                <View
                    android:id="@+id/signup_line_right"
                    android:layout_width="120dp"
                    android:layout_height="1dp"
                    android:layout_below="@+id/signup_password"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="40dp"
                    android:layout_toRightOf="@id/signup_or"
                    android:background="#c1c1c1"></View>


                <Button
                    android:id="@+id/google_signup"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/signup_line_right"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/google"
                    android:drawablePadding="-25dp"
                    android:hint="Sign in Using Google"
                    android:padding="10dp"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/signup_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/google_signup"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="By pressing 'Submit' you agree to our"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/terms_and_conditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/signup_agreement"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="terms &amp; Conditions"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="15dp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/growthpad_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/growthpad" />
    </FrameLayout>

    <Button

        android:id="@+id/signup_submit_btn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="-55dp"
        android:background="@drawable/custom_btn"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <!--<Button
        android:id="@+id/submit_btn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-30dp"
        android:background="@drawable/custom_btn"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:textSize="20dp" />-->

</LinearLayout>