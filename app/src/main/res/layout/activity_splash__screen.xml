<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    tools:context=".Splash_Screen">

    <ImageView
        android:id="@+id/growthpad_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="80dp"
        android:src="@drawable/logofullcurve"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/growth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/growthpad_logo"
        android:layout_marginStart="120dp"
        android:text="Growth"
        android:textColor="#77C360"
        android:textSize="90px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/growthpad_logo"
        android:layout_toRightOf="@id/growth"
        android:text="Pad"
        android:textColor="#363E4B"
        android:textSize="90px"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/growthpad.app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/growth"
        android:fontFamily="Montserrat"
        android:layout_centerHorizontal="true"
        android:text="growthpad.app"
        android:textColor="#363E4B"
        android:textSize="50px" />

</android.support.constraint.ConstraintLayout>