<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginTop="30dp"
        android:id="@+id/login_main_upr_logo"
        android:src="@drawable/growthpad"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="-50dp"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal">

        <android.support.v7.widget.CardView

            android:id="@+id/card_view"
            android:layout_width="320dp"
            android:layout_height="411dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/login_main_logo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-70dp"
                android:src="@drawable/growthpad" />

            <TextView
                android:id="@+id/login"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:text="Log in"
                android:textColor="#363E4B"
                android:textSize="40dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/login_emailid"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="150dp"
                android:background="@drawable/custom_edittext"

                android:drawablePadding="10dp"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Email, Phone Number or Username"
                android:inputType="textEmailAddress|number"
                android:paddingLeft="20dp"
                android:textColorHint="#363E4B"
                android:textSize="15dp" />


            <EditText
                android:id="@+id/login_password"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="230dp"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="10dp"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Password"
                android:inputType="numberPassword|textPassword"
                android:paddingLeft="25dp"
                android:password="true"
                android:textColorHint="#363E4B"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="290dp"
                android:text="Forgot password?"
                android:textSize="30px"
                android:textStyle="bold" />

            <Button
                android:id="@+id/login_btn"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="330dp"
                android:background="@drawable/custom_btn"
                android:fontFamily="@font/montserrat_bold"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:textStyle="bold" />


        </android.support.v7.widget.CardView>

    </FrameLayout>
    
    <Button
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:text="Sign up using Google"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="20dp"
        android:textStyle="bold"

        android:drawableLeft="@drawable/google"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        android:gravity="center"
        android:background="@drawable/custom_google_btn"
        android:layout_marginTop="48px"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Don't have an account?"
        android:textSize="30px"

        android:fontFamily="@font/montserrat_medium"
        android:layout_gravity="center"
        android:layout_marginTop="37px"/>

    <Button
        android:id="@+id/create_account_btn"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginTop="32px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/custom_create_account_btn"
        android:text="Create Account"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="30dp"

        android:fontFamily="@font/montserrat_bold" />

