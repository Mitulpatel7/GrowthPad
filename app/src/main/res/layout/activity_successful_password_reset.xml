<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context=".Successful_password_reset">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/_120sdp"
        android:layout_marginBottom="@dimen/_10sdp">

    <android.support.v7.widget.CardView

        android:id="@+id/card_view"
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_360sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/_10sdp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="@dimen/_5sdp">


        <ImageView
            android:id="@+id/successfull_reset_illutation"
            android:layout_width="@dimen/_224sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/ic_create_password"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Password is"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="@dimen/_230sdp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Successfully Reset"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="@dimen/_255sdp"/>

        <Button
            android:id="@+id/successfull_reset_login_btn"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_300sdp"
            android:background="@drawable/custom_btn"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_25sdp" />




    </android.support.v7.widget.CardView>


    </FrameLayout>

</LinearLayout>